<h1>Skate Park</h1>

<div class="py-4">
  <h2>Datos del perfil</h2>
  <hr class="w-50" />

  <form action="/actualizar/{{this.email}}?_method=PUT" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input type="text" name="email" class="form-control m-auto" value={{this.email}}>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Nombre</label>
        <input type="text" name="nombre" class="form-control m-auto" value={{this.nombre}}>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Password</label>
        <input type="password" name="password" class="form-control m-auto" value={{this.password}}>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Repita la password</label>
        <input type="password" name="repitaPassword" class="form-control m-auto" value={{this.password}}>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>AÃ±os de experiencia</label>
        <input type="text" name="experiencia" class="form-control m-auto" value={{this.anos_experiencia}} />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Especialidad</label>
        <input type="text" name="especialidad" class="form-control m-auto" value={{this.especialidad}} />
      </div>
    </div>
    <br>
    <div class="mb-1">            
      <button type="submit" class="btn btn-primary">Actualizar</button>
    </div>
  </form>
  <div>
    <form action="/eliminar/{{this.email}}?_method=DELETE" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <button type="submit" class="btn btn-danger">Eliminar cuenta</button>    
    </form>
  </div>
</div>

